<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Sanity Tests">
    <test name="Checkout Tests">
        <groups>
            <run>
                <include name="sanity"></include>
            </run>
        </groups>
        <classes>
            <class name="tests.exapmleWebsites.GoogleTest"></class>
            <class name="tests.exapmleWebsites.EtsyTest"></class>
            <class name="tests.exapmleWebsites.AmazonTest"></class>
        </classes>
    </test>
    
    <test name="Login Tests">
        <groups>
            <run>
                <include name="login"></include>
            </run>
        </groups>
        <classes>
            <class name="tests.exapmleWebsites.GoogleTest"></class>
            <class name="tests.exapmleWebsites.EtsyTest"></class>
            <class name="tests.exapmleWebsites.AmazonTest"></class>
        </classes>
    </test>
</suite>